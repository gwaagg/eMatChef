{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start All",
      "dependsOn": [
        "游릭 Docker: Start backend, frontend & db",
        "游대 Composer Install (Backend)",
        "丘뙖잺 DB Migrate"
      ]
    },
    {
      "label": "游릭 Docker: Start backend, frontend & db",
      "type": "shell",
      "command": "docker-compose up -d --build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "游대 Composer Install (Backend)",
      "type": "shell",
      "command": "docker-compose exec backend composer install",
      "problemMatcher": []
    },
    {
      "label": "丘뙖잺 DB Migrate",
      "type": "shell",
      "command": "docker-compose exec backend php bin/console doctrine:migrations:migrate --no-interaction",
      "problemMatcher": []
    },
    {
      "label": "游꺔 Load Fixtures",
      "type": "shell",
      "command": "docker-compose exec backend php bin/console doctrine:fixtures:load --no-interaction",
      "problemMatcher": []
    },
    {
      "label": "npm: build - backend",
      "type": "npm",
      "script": "build",
      "path": "backend",
      "group": "none",
      "problemMatcher": [],
      "detail": "encore production --progress"
    }
  ]
}
