{% extends 'base.html.twig' %}

{% block title %}API Übersicht{% endblock %}

{% block body %}
    <h2>Willkommen bei eMatChef</h2>

    {% if user %}
        <p><strong>Eingeloggt als:</strong> {{ user.email }}</p>
    {% else %}
        <p><strong>Du bist nicht eingeloggt.</strong></p>
    {% endif %}

    <h3>Verfügbare API-Routen:</h3>
    <ul>
        {% for route in api_routes %}
            <li>
                <code>{{ route.methods|join(', ') }}</code> →
                <strong>{{ route.name }}</strong>:
                <code>{{ route.path }}</code>
            </li>
        {% else %}
            <li>Keine API-Routen gefunden.</li>
        {% endfor %}
    </ul>
{% endblock %}